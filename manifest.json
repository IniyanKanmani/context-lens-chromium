{
  "manifest_version": 3,
  "name": "Context Lens",
  "version": "0.2",
  "description": "Chromium extension for AI-powered contextual text explanations. Just select text, hit keybind and get insights on popup in same tab",
  "author": "Iniyan Kanmani",
  "homepage_url": "https://github.com/IniyanKanmani/context-lens-chromium",
  "icons": {
    "48": "src/icons/icon-48.png",
    "96": "src/icons/icon-96.png",
    "128": "src/icons/icon-128.png"
  },
  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js", "src/popup.js", "src/model_response_handler.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": ["src/popup.css", "src/icons/send-icon.svg"]
    }
  ],
  "commands": {
    "quick-explain": {
      "description": "Quick Explain",
      "suggested_key": {
        "default": "Shift+Alt+E"
      }
    },
    "contextual-explain": {
      "description": "Explain with Additional Context",
      "suggested_key": {
        "default": "Shift+Alt+C"
      }
    }
  }
}
