{
  "manifest_version": 3,
  "name": "Context Lens",
  "version": "0.1",
  "description": "Chromium extension for AI-powered contextual text explanations. Highlight text and get instant insights via popup.",
  "author": "Iniyan Kanmani",
  "homepage_url": "https://github.com/IniyanKanmani/context-lens-chromium",
  "icons": {
    "48": "src/icons/icon-48.png",
    "96": "src/icons/icon-96.png",
    "128": "src/icons/icon-128.png"
  },
  "background": {
    "service_worker": "./src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["src/content.js", "src/popup.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://*/*"],
      "resources": ["src/popup.css"]
    }
  ]
}
